{
  "version": 2,
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "tradematch.uk" }],
      "destination": "https://www.tradematch.uk/$1",
      "permanent": true
    }
  ],
  "builds": [
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/admin-login(.html)?",
      "dest": "/frontend/admin-login.html"
    },
    {
      "src": "/admin-dashboard(.html)?",
      "dest": "/frontend/admin-dashboard.html"
    },
    {
      "src": "/admin-users(.html)?",
      "dest": "/frontend/admin-users.html"
    },
    {
      "src": "/admin-vendors(.html)?",
      "dest": "/frontend/admin-vendors.html"
    },
    {
      "src": "/admin-reviews(.html)?",
      "dest": "/frontend/admin-reviews.html"
    },
    {
      "src": "/admin-audit(.html)?",
      "dest": "/frontend/admin-audit.html"
    },
    {
      "src": "/admin-admins(.html)?",
      "dest": "/frontend/admin-admins.html"
    },
    {
      "src": "/admin-password-change(.html)?",
      "dest": "/frontend/admin-password-change.html"
    },
    {
      "src": "/admin-api.js",
      "dest": "/frontend/admin-api.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        }
      ]
    }
  ]
}
